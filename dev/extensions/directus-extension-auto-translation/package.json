{
	"name": "directus-extension-auto-translation",
	"description": "An extension for Directus that automatically translates fields using DeepL API when provided with an API key.",
	"icon": "extension",
	"version": "10.11.2",
	"keywords": [
		"translate",
		"translation",
		"deepl",
		"ai",
		"auto",
		"automatic",
		"language",
		"multilingual",
		"localization",
		"internationalization",
		"i18n",
		"l10n",
		"directus",
		"directus-extension",
		"directus-extension-hook"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"release": "release-it --npm.skipChecks",
		"clean": "rm -rf ./dist"
	},
	"release-it": {
		"hooks": {
			"before:init": [
				"npm run build"
			]
		},
		"git": {
			"commitMessage": "[RELEASE] ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		}
	},
	"dependencies": {
		"deepl-node": "^1.5.0",
		"js-yaml": "^4.1.0"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "11.0.4",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20.12.12",
		"release-it": "^14.2.2",
		"rimraf": "^3.0.2",
		"typescript": "^5.4.5"
	}
}
