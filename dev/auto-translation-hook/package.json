{
	"name": "directus-extension-auto-translation-hook",
	"version": "1.0.21",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-hook"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.js",
		"host": "^9.16.1"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"release": "npm run clean && npm run build && release-it --npm.skipChecks",
		"clean": "rm -rf ./dist"
	},
	"devDependencies": {
		"rimraf": "^3.0.2",
		"release-it": "^14.2.2",
		"@directus/extensions-sdk": "9.16.1"
	},
	"release-it": {
		"git": {
			"commitMessage": "[RELEASE] ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		}
	},
	"dependencies": {
		"deepl-node": "^1.5.0"
	}
}
